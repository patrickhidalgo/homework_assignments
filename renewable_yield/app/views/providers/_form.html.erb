<%= form_for(@provider, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @provider.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@provider.errors.count, "error") %> prohibited this provider from being saved:</h4>

      <ul>
      <% @provider.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :company_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact_first_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :contact_first_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_phone_number, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_phone_number, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_street_address, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_street_address, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_city, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_city, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_state, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_state, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_zip, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :company_zip, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company_email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company_email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :password, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
