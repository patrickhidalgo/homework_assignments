<div class="page-header">
  <%= link_to new_investor_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Investor
  <% end %>
  <h1>Listing investors</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>First name</th>
            <th>Middle name</th>
            <th>Last name</th>
            <th>Phone number</th>
            <th>Street address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Email</th>
            <th>Ssn</th>
            <th>Password</th>
            <th>Password confirmation</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @investors) do |investor| %>
            <td><%= investor.first_name %></td>
            <td><%= investor.middle_name %></td>
            <td><%= investor.last_name %></td>
            <td><%= investor.phone_number %></td>
            <td><%= investor.street_address %></td>
            <td><%= investor.city %></td>
            <td><%= investor.state %></td>
            <td><%= investor.zip %></td>
            <td><%= investor.email %></td>
            <td><%= investor.ssn %></td>
            <td><%= investor.password %></td>
            <td><%= investor.password_confirmation %></td>
            <td><%= link_to 'Show', investor %></td>
        <td><%= link_to 'Edit', edit_investor_path(investor) %></td>
        <td><%= link_to 'Destroy', investor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Home', root_path %>
</div>
